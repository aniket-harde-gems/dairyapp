<p id="notice"><%= notice %></p>

<h1>Milkmen</h1>
<%=
  link_to 'Download the milkman customer product sheet',
  milkmen_path(format: :xlsx)
%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @milkmen.each do |milkman| %>
      <tr>
        <td><%= milkman.name %></td>
        <td><%= link_to 'Show', milkman %></td>
        <td><%= link_to 'Edit', edit_milkman_path(milkman) %></td>
        <td><%= link_to 'Destroy', milkman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Milkman', new_milkman_path %>
